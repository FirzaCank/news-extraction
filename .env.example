# Environment variables for development
# Copy this file to .env and fill in your values

# Diffbot API Token (required)
DIFFBOT_TOKEN=your-diffbot-token-here

# AI Provider for parsing (gemini or openai)
AI_PROVIDER=gemini

# Google Gemini API Key (if using gemini)
GEMINI_API_KEY=your_gemini_key_here

# OpenAI API Key (if using openai)
OPENAI_API_KEY=your_openai_key_here

# Optional AI settings (uncomment to customize)
# GEMINI_MODEL=gemini-2.0-flash-exp
# OPENAI_MODEL=gpt-4o-mini
# AI_TEMPERATURE=0.1
# AI_MAX_CONTENT=6000
# AI_DELAY=1

# GCS Configuration
GCS_BUCKET_NAME=asia-southeast1-news-extraction-scrape-data
GCS_INPUT_PATH=input
GCS_OUTPUT_PATH=output

# Local Development Mode
# Set to "true" to use local files instead of GCS
LOCAL_MODE=false

# Google Cloud Project
GCP_PROJECT_ID=robotic-pact-466314-b3

# Scraper Settings (optional - defaults are in main.py)
# MAX_PAGES=5
# DELAY_BETWEEN_URLS=8
# DELAY_BETWEEN_PAGES=6
# MAX_RETRIES=3
# RETRY_DELAY=5
